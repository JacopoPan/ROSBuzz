function uav_neicmd() {
    neighbors.listen("cmd",
    function(vid, value, rid) {
        print("Got (", vid, ",", value, ") from robot #", rid)
        if(value==22 and UAVSTATE!="TAKEOFF") {
            statef=takeoff
        } else if(value==21) {
            statef=land
        } else if(value==400 and UAVSTATE=="IDLE") {
            uav_arm()
        } else if(value==401 and UAVSTATE=="IDLE"){
            uav_disarm()
        }
    })
}